<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".TournamentArchive">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="680dp"
        android:background="#456348"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textview_tournament_archive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Tournament Archive"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView_tournament_dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/trophy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="@drawable/rounded_border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.806">

        <TextView
            android:id="@+id/textview_tournament_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:hint="Tournament Name loading..."
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.555" />

        <TextView
            android:id="@+id/tournament_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="100dp"
            android:hint="Loading Name.."
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tournamentText_fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="257dp"
            android:text="Participant Name:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider_name"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="-90dp"
            android:layout_marginTop="150dp"
            android:background="#a9a9a9" />

        <TextView
            android:id="@+id/tournament_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="170dp"
            android:hint="Loading Category.."
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tournamentText_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="170dp"
            android:text="Tournament Category:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider_date"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="-90dp"
            android:layout_marginTop="220dp"
            android:background="#a9a9a9" />

        <TextView
            android:id="@+id/tournament_dateJoined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="240dp"
            android:hint="Loading Date Joined.."
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tournamentText_dateJoined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="300dp"
            android:text="Date Joined:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider_mobile"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="-90dp"
            android:layout_marginTop="290dp"
            android:background="#a9a9a9" />

        <TextView
            android:id="@+id/tournament_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="306dp"
            android:text="Mobile No: "
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tournament_mobilehint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="123dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="310dp"
            android:hint="Loading mobile no.."
            android:textSize="18sp" />

        <View
            android:id="@+id/divider_desc"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="-90dp"
            android:layout_marginTop="360dp"
            android:background="#a9a9a9" />

        <TextView
            android:id="@+id/tournament_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="197dp"
            android:text="Tournament Description: "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tournament_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="380dp"
            android:hint="Loading Description.."
            android:textSize="18sp" />



    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>